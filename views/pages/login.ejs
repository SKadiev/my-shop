<style scoped media="max-width: 1px">
    footer {
        align-self: flex-end;
    }
</style>

<div class="auth-div body-container">
    <form class="loginForm authForm needs-validation" method="post" action="/login" novalidate>
        <%- include('../partials/auth-errors.ejs')%>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" value="<%= oldInput.email%>"
                    aria-describedby="emailHelpId" placeholder="" required>
                <div class="invalid-feedback">
                    Please choose a email.
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password"
                    value="<%= oldInput.password%>" placeholder="Password" required>
                <div class="invalid-feedback">
                    Please choose a password.
                </div>
            </div>
            <button type="submit" class="login-btn btn">Login</button>
            <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
        </form>
        <form class="forgot-password-form" method="post" action="/forgot-password">
            <button type="submit" class="btn">Forgot password</button>
        </form>
</div>
<%- contentFor('styles') %>
    <link rel="stylesheet" href="/css/authform.css">