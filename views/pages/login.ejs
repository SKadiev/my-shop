<style scoped media="max-width: 1px">
    footer {
        align-self: flex-end;
    }
</style>

<div class="auth-div body-container">
    <form class="loginForm authForm" method="post" action="/login">
        <%- include('../partials/auth-errors.ejs')%>
        <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId"
                    placeholder="">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div>
            <button type="submit" class="login-btn btn">Login</button>
            <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
        </form>
</div>
<%- contentFor('styles') %>
    <link rel="stylesheet" href="/css/authform.css">